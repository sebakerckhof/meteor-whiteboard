{
  "scripts": {
    "start": "meteor",
    "lint": "eslint ."
  },
  "dependencies": {
    "angular": "~1.5.6",
    "angular-animate": "~1.5.6",
    "angular-aria": "~1.5.6",
    "angular-material": "~1.1.1",
    "angular-meteor": "~1.3.11",
    "angular-sanitize": "~1.5.6",
    "autoprefixer": "~6.3.1",
    "bcrypt": "^1.0.2",
    "cors": "~2.7.1",
    "es6-shim": "~0.35.0",
    "meteor-node-stubs": "~0.2.0",
    "svg2png": "~3.0.0"
  },
  "devDependencies": {
    "eslint": "~2.3.0",
    "eslint-config-airbnb": "~6.1.0",
    "eslint-plugin-meteor": "~3.0.1"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "meteor/eventmap-params": [
        2,
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        0
      ]
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  }
}
